<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<proofagent_config last_update="2008-01-15" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-linux.gsi.de/~manafov/D-Grid/docz/proofagent.cfg.xsd">
<!-- General properties of PROOFAgent
            logfile_dir - (string) - a directory path for the log file
            logfile_overwrite - (yes/no) - whether PA should overwrite the log file after each session
            log_level - (string - [0-3]) - the level of the log: 0 - errors; 1 - warn; 2 - info; 3 - debug;  
            agent_mode - (string - "Server"/"Client") - the mode in which this instance should work
            timeout - !!! Should be renamed !!!
            proof_cfg_dir - (string) - a directory path where PA should place proof.conf and xrootd conf files (~ and %HOME can be use)
            -->
	<instances>
		<instance name="server0" type="server">
			<config>
				<work_dir>/tmp/</work_dir>
				<logfile_dir>/tmp/</logfile_dir>
				<logfile_overwrite>true</logfile_overwrite>
				<log_level>0</log_level>
				<timeout>0</timeout>
				<proof_cfg_path>~/proof.conf.server</proof_cfg_path>
				<last_execute_cmd/>
			</config>
			<agent_server>
				<listen_port>51510</listen_port>
				<local_client_port_min>20000</local_client_port_min>
				<local_client_port_max>20010</local_client_port_max>
			</agent_server>
		</instance>
		<instance name="client0" type="client">
			<config>
				<work_dir>/tmp/</work_dir>
				<logfile_dir>/tmp/</logfile_dir>
				<logfile_overwrite>true</logfile_overwrite>
				<log_level>0</log_level>
				<timeout>0</timeout>
				<proof_cfg_path>~/proof.conf.server</proof_cfg_path>
				<last_execute_cmd/>
			</config>
			<agent_client>
				<server_port>51510</server_port>
				<server_addr>127.0.0.1</server_addr>
				<local_proofd_port>1093</local_proofd_port>
			</agent_client>
		</instance>
		<instance name="client1" type="client">
			<config>
				<work_dir>/tmp/</work_dir>
				<logfile_dir>/tmp/</logfile_dir>
				<logfile_overwrite>true</logfile_overwrite>
				<log_level>0</log_level>
				<timeout>0</timeout>
				<proof_cfg_path>~/proof.conf.server</proof_cfg_path>
				<last_execute_cmd/>
			</config>
			<agent_client>
				<server_port>51510</server_port>
				<server_addr>127.0.0.1</server_addr>
				<local_proofd_port>1093</local_proofd_port>
			</agent_client>
		</instance>
	</instances>
</proofagent_config>
