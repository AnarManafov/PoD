<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<proofagent_config last_update="" version="1.0.0" xmlns="">
    
       <!-- General properties of PROOFAgent
            logfile_dir - (string) - a directory path for the log file
            logfile_overwrite - (yes/no) - whether PA should overwrite the log file after each session
            log_level - (string - [0-3]) - the level of the log: 0 - errors; 1 - warn; 2 - info; 3 - debug;  
            agent_mode - (string - "Server"/"Client") - the mode in which this instance should work
            timeout - !!! Should be renamed !!!
            proof_cfg_dir - (string) - a directory path where PA should place proof.conf and xrootd conf files (~ and %HOME can be use)
            -->
    
	<instances>
		
        <server>         
            <config
                logfile_dir="/tmp/"
                logfile_overwrite="yes"
                log_level="0"
                agent_mode="Server"
                timeout="0"
                proof_cfg_path="~/proof.conf.server"/>
            <agent_server
                listen_port="51510"
                local_client_port_min="20000"
                local_client_port_max="20010" />
        </server>

        <client1>
            <config
                logfile_dir="/tmp/"
                logfile_overwrite="yes"
                log_level="0"
                agent_mode="Client"
                timeout="0"
                last_execute_cmd=""
                proof_cfg_path="~/proof.conf.client1"/>
            <agent_client
                server_port="51510"
                server_addr="127.0.0.1"
                local_proofd_port="1093"/>
        </client1>
	  
        
        <client2>            
                <config
                logfile_dir="/tmp/"
                logfile_overwrite="yes"
                log_level="0"
                agent_mode="Client"
                timeout="0"
                last_execute_cmd=""
                proof_cfg_path="~/proof.conf.client2"/>
            
                <agent_client
                server_port="51510"
                server_addr="127.0.0.1"
                local_proofd_port="1093"/>        
        </client2>
        
	</instances>		
</proofagent_config>
